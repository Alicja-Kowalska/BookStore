@model BookStore.Models.BorrowedBooks

@{
    ViewData["Title"] = "Books";
}

<h1>Borrowed Books</h1>

<form asp-controller="BorrowedBooks" asp-action="Index" method="get">
    <p>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Books![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books![0].RentalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books![0].ReturnDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Books!)
        {
            @if (item.RentalDate != null)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RentalDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReturnDate)
                    </td>
                </tr>
            }
            
        }
    </tbody>
</table>